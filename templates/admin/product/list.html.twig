{% extends 'admin/base.html.twig' %}

{% block body %}
    <h1>Product List</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>code</th>
                <th>desc</th>
                <th>price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.code }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td><a href="{{ path('admin_product_detail', {'productId' : product.id}) }}"><i class="bi bi-eye"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
